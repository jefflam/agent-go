# Logging
LOG_LEVEL=DEBUG  # Available: DEBUG, INFO, WARN, ERROR

# Twitter API Credentials
TWITTER_API_KEY=your_api_key_here
TWITTER_API_SECRET=your_api_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_SECRET=your_access_token_secret_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Agent Configuration
AGENT_NAME=TwitterBot
AGENT_VERSION=0.1.0
AGENT_PERSONALITY=friendly  # Available: friendly, professional, casual
AGENT_MEMORY_SIZE=1000  # Number of conversations to keep in memory

# Database Configuration (if needed)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=twitter_agent
DB_USER=postgres
DB_PASSWORD=your_password_here

# Redis Configuration (for caching/rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password